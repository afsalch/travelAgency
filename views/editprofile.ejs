            <section class="content-main">
                <div class="row">
                    <div class="col-9">
                        <div class="content-header">
                            <h2 class="content-title">Edit Profile</h2>
                            <div>
                                
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h4>Basic</h4>
                            </div>
                            <div class="card-body">
                                <form id="form">
                                    <div class="mb-4">
                                        <label for="name" class="form-label">Name</label>
                                        <input type="text" placeholder="Enter staff name" class="form-control" id="name" name="name" value="<%= admin.user %>" />
                                        <span id="name_error" class="error"></span>
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Email</label>
                                        <input type="email" placeholder="Enter email" class="form-control" id="email" name="email" value="<%= admin.email %>" />
                                        <span id="email_error" class="error"></span>
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Phone</label>
                                        <input type="text" placeholder="Enter Phone number" class="form-control" id="phone" name="phone" value="<%= admin.phone %>" />
                                        <span id="phone_error" class="error"></span>
                                    </div>
                                    
                                    <button class="btn btn-md rounded font-sm hover-up" type="submit">Submit</button>
                                </form>
                                
                            </div>
                        </div>
                        <!-- card end// -->
                        
                    </div>
                    
                </div>
            </section>
            <!-- content-main end// -->
            <footer class="main-footer font-xs">
                <div class="row pb-30 pt-15">
